rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all menu items (so customers can see them)
    match /menu-items/{userId}/{allPaths=**} {
      allow read: if true;
      // Only allow the owner to upload/delete their own images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
