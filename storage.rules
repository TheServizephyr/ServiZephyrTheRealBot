rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /menu-items/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // ✅ WhatsApp Direct Media (Images, Videos, Documents, Audio)
    match /whatsapp_media/{businessId}/{allPaths=**} {
      allow read: if true; // ✅ PUBLIC READ - WhatsApp API needs to download
      allow write: if request.auth != null; // Authenticated users can upload
    }
  }
}
